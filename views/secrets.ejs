<%- include('partials/header') %>

<div class="m-5 text-center">
  <div class="container pt-5">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-5 fw-bold py-3 pb-4">You've Discovered, <br> My Secret!</h1>

    usersWithSecrets.forEach((user) => {
      <p class="secret-text rounded my-2"> <%= user.secret%> </p>
    });

    <hr class="my-4 px-5">
    
    <a class="btn btn-outline-dark btn-lg mx-3" href="/logout" role="button">
      Log Out
      <i class="fas fa-door-open"></i>
    </a>
    <a class="btn btn-dark btn-lg" href="/submit" role="button">
      Submit a Secret
      <i class="fas fa-mask"></i>
    </a>
  </div>
</div>

<%- include('partials/footer') %>
